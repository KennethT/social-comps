<!DOCTYPE html>
<html>
<head>
  <title>SocialComp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://maps.googleapis.com/maps/api/js"></script>
  <script>
       function initialize() {
         var mapCanvas = document.getElementById('map-canvas');
         var mapOptions = {
           center: new google.maps.LatLng(39.7392, -104.9903),
           zoom: 8,
           mapTypeId: google.maps.MapTypeId.ROADMAP
         }
         var map = new google.maps.Map(mapCanvas, mapOptions)
       }
       google.maps.event.addDomListener(window, 'load', initialize);
  </script>

  <script>
       function initialize2() {
         var mapCanvas = document.getElementById('map-canvas-2');
         var mapOptions = {
           center: new google.maps.LatLng(39.7392, -104.9903),
           zoom: 8,
           mapTypeId: google.maps.MapTypeId.ROADMAP
         }
         var map = new google.maps.Map(mapCanvas, mapOptions)
       }
       google.maps.event.addDomListener(window, 'load', initialize2);
  </script>
  <navbar>
    <div class="topbar">
      <br>
      <div class="form-group">
        <h5>
          Social Comps
          <%= form_tag '/', method: :get do %>
          <%= text_field_tag :search_term1, nil, placeholder: 'First Brand' %> Vs.
          <%= text_field_tag :search_term2, nil, placeholder: 'Second Brand' %>
          <%= submit_tag 'Compare Tweets', class: 'btn btn-default' %>
          <% end %>
        </h4>
      </div>
    </div>
    <div class="botbar">
      <div class="form-group">
        <div class="btn btn-primary col-md-4"> Maps </div>
        <div class="btn btn-primary col-md-4"> Sentiment </div>
        <div class="btn btn-primary col-md-4"> Tweets </div>
      </div>
    </div>
  </navbar>

</head>
<body>

<%= yield %>

</body>
</html>
