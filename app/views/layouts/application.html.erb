<!DOCTYPE html>
<html>
<head>
  <title>SocialComp</title>




  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
  <script type="text/javascript"  src="https://maps.googleapis.com/maps/api/js?libraries=visualization&sensor=true_or_false">
  </script>

  <navbar>
    <div class="topbar">
      <br>
      <div class="form-group">
        <h5>
          Social Comps
          <%= form_tag '/', method: :get do %>
          <%= text_field_tag :search_term1, nil, placeholder: 'First Brand' %> Vs.
          <%= text_field_tag :search_term2, nil, placeholder: 'Second Brand' %>
          <%= submit_tag 'Compare Tweets', class: 'btn btn-default' %>
          <% end %>
        </h4>
      </div>
    </div>
    <div class="botbar">
      <div class="form-group">
        <div class="btn btn-primary col-md-4 map_btn"> Maps </div>
        <div class="btn btn-primary col-md-4 sen_btn"> Sentiment </div>
        <div class="btn btn-primary col-md-4 twt_btn"> Tweets </div>
      </div>
    </div>
  </navbar>

</head>
<body>

<%= yield %>

  <!-- This javascript renders the google api maps -->
<script>
  var locations = <%= raw @geo1 %>
  var locations2 = <%= raw @geo2 %>

  mapBuilder('map-canvas', locations)
  mapBuilder('map-canvas-2', locations2)
</script>
</body>

</html>
