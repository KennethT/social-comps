<!DOCTYPE html>
<html>
<head>
  <title>SocialComp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://maps.googleapis.com/maps/api/js"></script>

  <navbar>
    <div class="topbar">
      <br>
      <div class="form-group">
        <h5>
          Social Comps
          <%= form_tag '/', method: :get do %>
          <%= text_field_tag :search_term1, nil, placeholder: 'First Brand' %> Vs.
          <%= text_field_tag :search_term2, nil, placeholder: 'Second Brand' %>
          <%= submit_tag 'Compare Tweets', class: 'btn btn-default' %>
          <% end %>
        </h4>
      </div>
    </div>
    <div class="botbar">
      <div class="form-group">
        <div class="btn btn-primary col-md-4"> Maps </div>
        <div class="btn btn-primary col-md-4"> Sentiment </div>
        <div class="btn btn-primary col-md-4"> Tweets </div>
      </div>
    </div>
  </navbar>

</head>
<body>

<%= yield %>

</body>
</html>
